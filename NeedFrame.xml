                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!--            <Frame name="itemText" inherits="NeedFrameItemTemplate">-->
            <!--            </Frame>-->

        </Frames>

        <Scripts>
            <OnLoad>
                    this:RegisterForDrag("LeftButton");
                    this:SetMovable(1);
                    this:SetUserPlaced(true);
            </OnLoad>
            <OnDragStart>
                    this:StartMoving();
                    this.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                    this:StopMovingOrSizing();
                    this.isMoving = false;
            </OnDragStop>
        </Scripts>
