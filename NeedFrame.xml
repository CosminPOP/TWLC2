    <Frame name="LootLCNeedFrameWindow" hidden="true" toplevel="true"
           parent="UIParent" movable="true" enableMouse="true">
        <Size>
            <AbsDimension x="300" y="50"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
                  tile="true">
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="4" right="4" top="4" bottom="4"/>
            </BackgroundInsets>
        </Backdrop>
